<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/s_padding"
        android:layout_marginBottom="@dimen/xs_padding"
        android:layout_marginTop="@dimen/xs_padding"
>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/s_padding"
            android:paddingBottom="@dimen/s_padding"
            android:paddingLeft="@dimen/m_padding"
            android:paddingRight="@dimen/m_padding">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_sched_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_cws_sched"
                android:textSize="@dimen/text_small"
                android:textColor="@color/hrx_title_header"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cws_sched_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_sched_header"
                app:layout_constraintLeft_toLeftOf="@id/tv_sched_header"
                android:text="Monday-Friday"
                android:textColor="@color/hrx_field_sub_header"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
        />

        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline9"
                app:layout_constraintGuide_percent="0.35"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_type_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_cws_shift_type"
                android:textSize="@dimen/text_small"
                android:textColor="@color/hrx_title_header"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline9"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cws_type_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_type_header"
                app:layout_constraintLeft_toLeftOf="@id/tv_type_header"
                android:text="8:30AM-5:30PM"
                android:textColor="@color/hrx_field_sub_header"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
        />

        <androidx.constraintlayout.widget.Guideline
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline10"
                app:layout_constraintGuide_percent="0.68"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date_header"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:text="@string/work_cws_eff_date"
                android:textSize="@dimen/text_small"
                android:textColor="@color/hrx_title_header"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="@+id/guideline10" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cws_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dec 01, 2019"
                android:textColor="@color/hrx_field_sub_header"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tv_date_header"
                app:layout_constraintTop_toTopOf="@+id/tv_cws_type_text"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_remarks_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="@string/work_cws_remarks"
                android:textColor="@color/hrx_title_header"
                app:layout_constraintTop_toBottomOf="@+id/tv_cws_sched_text"
                app:layout_constraintLeft_toLeftOf="@+id/tv_cws_sched_text"
                android:layout_marginTop="16dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cws_remarks_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_remarks_header"
                app:layout_constraintLeft_toLeftOf="@id/tv_remarks_header"
                android:text="Latuasdandwdawkjdakbwdbadbabdkabkfbajkbwkfjabkjwbkjabwfjkabfaffawfafwafaffawfawfbajkfbakjwbfjkabjkfbajkwfbjkawbfjkabwjkfafajkwbakfbwakjbfkajfbkjwabfkawbfkjwbajkfbakjfbjkabfkja"
                android:textColor="@color/hrx_field_sub_header"
                android:textSize="@dimen/text_small"
                android:textStyle="bold"
        />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="@string/work_cws_status"
                android:textColor="@color/hrx_title_header"
                app:layout_constraintTop_toBottomOf="@+id/tv_cws_remarks_text"
                app:layout_constraintLeft_toLeftOf="@+id/tv_cws_remarks_text"
                android:layout_marginTop="16dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_cws_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_status_header"
                app:layout_constraintLeft_toLeftOf="@id/tv_status_header"
                android:text="Wait for approval"
                android:textSize="@dimen/text_small"
                android:textColor="@color/hrx_field_sub_header"
                android:textStyle="bold"
        />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>