<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/grid_1_half"
        android:background="@color/white_color">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btn_edit_family_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/edit"
            android:paddingRight="@dimen/grid_1"
            android:paddingLeft="@dimen/grid_1"
    android:paddingTop="@dimen/grid_1"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/grid_2">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ub_black"
                android:textSize="@dimen/text_small_body"
                android:text="Alanis Dela Cruz"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_full_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/grid_1_half"
                android:textSize="@dimen/text_small"
                android:text="Full Name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_full_name"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_hmo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ub_black"
                android:textSize="@dimen/text_small"
                android:text="HMO Beneficiary:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_full_name"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_hmo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_body"
                android:text="Yes"
                android:paddingBottom="@dimen/grid_1_half"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_hmo"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_family"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_body"
                android:text="Daughter"
                android:textColor="@color/ub_black"
                app:layout_constraintStart_toStartOf="@id/guideline_family"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="Relationship"
                android:paddingBottom="@dimen/grid_1_half"
                app:layout_constraintStart_toStartOf="@id/guideline_family"
                app:layout_constraintTop_toBottomOf="@id/tv_relationship"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="Insurance Beneficiary:"
                android:textColor="@color/ub_black"
                app:layout_constraintStart_toStartOf="@id/guideline_family"
                app:layout_constraintTop_toBottomOf="@id/lbl_relationship"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_insurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small_body"
                android:text="Yes"
                android:paddingBottom="@dimen/grid_1_half"
                app:layout_constraintStart_toStartOf="@id/guideline_family"
                app:layout_constraintTop_toBottomOf="@id/tv_insurance"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>