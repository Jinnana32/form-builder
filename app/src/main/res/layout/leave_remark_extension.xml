<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:id="@+id/linearLayout2">
    <androidx.appcompat.widget.AppCompatTextView
            android:textStyle="bold"
            android:id="@+id/dad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason:"
            android:textSize="14dp"
            android:textColor="@color/model_name_color"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jamyla Dela Cruz"
            android:textColor="@android:color/black"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="92dp" app:layout_constraintTop_toBottomOf="@+id/dad"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="8dp"/>

    <View android:layout_width="0dp" android:layout_height="1dp"
          android:background="@color/gray1"
          app:layout_constraintStart_toStartOf="parent"
          android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_reason"
          android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
          android:id="@+id/view2"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_lineManagerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line Manager's Remarks:"
            android:textColor="@color/model_name_color"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="14dp"
            app:layout_constraintHorizontal_bias="0.008"
            tools:layout_conversion_absoluteHeight="19dp"
            tools:layout_conversion_absoluteWidth="155dp"
            app:layout_constraintTop_toBottomOf="@+id/view2"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginEnd="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_remarks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Jamyla Dela CruzJamyla Dela CruzJamyla Dela CruzJamyla Dela CruzJamyla Dela CruzJamyla Dela CruzJamyla Dela Cruz"
            android:textSize="12dp"
            android:textColor="@android:color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            tools:layout_conversion_absoluteHeight="16dp"
            tools:layout_conversion_absoluteWidth="92dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_lineManagerText"
            android:layout_marginBottom="16dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>