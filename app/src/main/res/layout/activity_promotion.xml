<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:id="@+id/toolbar"
              android:layout_height="match_parent">

    <com.itsgmobility.hrbenefits.ui.UBEditText android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:padding="0dp"
                                               android:drawableRight="@drawable/ic_search_black_24dp"
                                               android:layout_marginLeft="@dimen/m_padding"
                                               android:layout_marginRight="@dimen/m_padding"
                                               android:id="@+id/UBEditText"
                                               android:layout_marginTop="8dp"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/l_padding"
            android:paddingLeft="@dimen/m_padding"
            android:paddingRight="@dimen/m_padding">

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_direct_reports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

    </androidx.core.widget.NestedScrollView>

</LinearLayout>