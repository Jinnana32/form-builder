<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:fillViewport="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"

        >

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="August 16, 2019"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_small_body"
                    android:id="@+id/tv_reimbursement_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintTop_toTopOf="@+id/layout_cirwcle_heading42" android:layout_marginTop="6dp"/>
            <de.hdodenhof.circleimageview.CircleImageView android:layout_width="80dp"
                                                          android:layout_height="81dp"
                                                          android:src="@drawable/rex"
                                                          android:id="@+id/circleImageView2"
                                                          app:layout_constraintStart_toStartOf="parent"
                                                          android:layout_marginLeft="8dp"
                                                          android:layout_marginStart="8dp"
                                                          app:layout_constraintEnd_toEndOf="parent"
                                                          android:layout_marginEnd="8dp"
                                                          android:layout_marginRight="8dp"
                                                          app:layout_constraintHorizontal_bias="0.498"
                                                          android:layout_marginTop="36dp"
                                                          app:layout_constraintTop_toTopOf="parent"/>
            <Button

                    android:layout_width="35dp"
                    android:layout_height="21dp"
                    android:background="@drawable/x"
                    android:id="@+id/button"

                    android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:visibility="gone"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pending"
                    android:background="@drawable/status_lable_pending"
                    android:paddingLeft="20dp"
                    android:paddingBottom="5dp"

                    android:paddingTop="5dp"
                    android:paddingRight="20dp"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/text_small_body"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="155dp"
                    android:layout_marginStart="155dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="155dp" android:layout_marginRight="155dp" android:id="@+id/tv_status"
                    android:layout_marginTop="1dp" app:layout_constraintTop_toBottomOf="@+id/circleImageView2"/>


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jamyla Dela Cruz"
                    android:textColor="@color/ub_black"
                    android:textSize="@dimen/leave_card_sub1"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_status"/>


            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_leave_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vacation Leave"
                    android:textColor="@color/ub_black"
                    android:textSize="@dimen/leave_card_sub2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_name" android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_circle_headindg41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/tv_leave_type">

                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_circle"
                        android:layout_weight="1"
                        android:paddingBottom="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xs_padding"
                        android:layout_marginBottom="@dimen/s_padding"
                        android:text="@string/expense_type"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_small_body"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Food Reimbursement"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_small_body"
                    android:id="@+id/tv_reimburse_type"
                    app:layout_constraintTop_toBottomOf="@+id/layout_circle_headindg41"
                    android:layout_marginStart="36dp" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="36dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3331241251"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/text_small_body"
                    android:id="@+id/tv_reimbursement_receipt"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
                    app:layout_constraintTop_toTopOf="@+id/layoust_circle_heading41" android:layout_marginTop="6dp"/>


            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_cirwcle_heading42"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="288dp" android:layout_marginRight="288dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/layoust_circle_heading41">

                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_circle"
                        android:layout_weight="1"
                        android:paddingBottom="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xs_padding"
                        android:layout_marginBottom="@dimen/s_padding"
                        android:text="@string/expense_date"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_small_body"/>


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_cirwcle_heading41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="288dp"
                    android:layout_marginTop="@dimen/text_small"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="0.0"
                    android:layout_marginRight="288dp" android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayoutCompat3">

                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_circle"
                        android:layout_weight="1"
                        android:paddingBottom="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xs_padding"
                        android:layout_marginBottom="@dimen/s_padding"
                        android:text="Line Manager's Remarks"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_small_body"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layout_cirwcle_heading4dadaa1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/layout_cirwcle_heading42"
                    android:layout_marginLeft="20dp">

                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_circle"
                        android:layout_weight="1"
                        android:paddingBottom="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xs_padding"
                        android:layout_marginBottom="@dimen/s_padding"
                        android:text="View Supporting Document"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_small_body"/>
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/l_padding"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/text_small"
                    android:layout_marginBottom="@dimen/text_small"
                    app:layout_constraintTop_toBottomOf="@+id/layout_cirwcle_heading4dadaa1"
                    android:id="@+id/linearLayoutCompat3" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp">

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_note_add_grey_500_48dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_note_add_grey_500_48dp"/>

                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_note_add_grey_500_48dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/layoust_circle_heading41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="288dp" android:layout_marginRight="288dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                    android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@+id/tv_reimburse_type" android:layout_marginTop="16dp">

                <ImageView
                        android:layout_width="15dp"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ic_circle"
                        android:layout_weight="1"
                        android:paddingBottom="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/xs_padding"
                        android:layout_marginBottom="@dimen/s_padding"
                        android:text="@string/expense_receipt"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/text_small_body"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="0dp"

                    android:layout_height="133dp"
                    style="@style/UBEditTextMultiLine"
                    android:id="@+id/et_reason"
                    android:layout_marginEnd="22dp" android:layout_marginRight="22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_cirwcle_heading41"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="22dp"
                    android:layout_marginStart="22dp" app:layout_constraintHorizontal_bias="0.0"/>

            <com.itsgmobility.hrbenefits.ui.UBButton android:layout_width="wrap_content"
                                                     android:layout_height="35dp"
                                                     style="@style/Base.UBButton.Primary"
                                                     android:text="@string/approve"
                                                     android:textAllCaps="false"

                                                     android:id="@+id/btn_approve"
                                                     android:layout_marginTop="24dp"
                                                     app:layout_constraintTop_toBottomOf="@+id/et_reason"
                                                     android:layout_marginBottom="36dp"
                                                     app:layout_constraintBottom_toBottomOf="parent"
                                                     android:layout_marginStart="24dp"
                                                     app:layout_constraintStart_toStartOf="parent"
                                                     android:layout_marginLeft="24dp"
            />
            <com.itsgmobility.hrbenefits.ui.UBButton android:layout_width="wrap_content"
                                                     android:layout_height="35dp"
                                                     style="@style/UBButton"
                                                     android:text="@string/decline"
                                                     android:textAllCaps="false"

                                                     android:id="@+id/btn_decline"
                                                     android:layout_marginBottom="24dp"
                                                     app:layout_constraintBottom_toBottomOf="parent"
                                                     app:layout_constraintEnd_toEndOf="parent"
                                                     android:layout_marginEnd="24dp"
                                                     android:layout_marginRight="24dp"
                                                     app:layout_constraintTop_toTopOf="@+id/btn_approve"/>
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/ic_back"
                    android:id="@+id/image_x" android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>