<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color">

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_edit_contact_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/edit"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingRight="@dimen/grid_1"
            android:paddingLeft="@dimen/grid_1"
            android:paddingTop="@dimen/grid_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/home_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/grid_2"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ub_black"
                android:textSize="@dimen/text_small_body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/grid_1_half"
                android:textSize="@dimen/text_small"
                android:text="Mobile Number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_mobile_number"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_personal_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ub_black"
                android:textSize="@dimen/text_small_body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_mobile_number"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_personal_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="Personal Email Address"
                android:paddingBottom="@dimen/grid_1_half"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_personal_email_address"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_contact_info"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_home_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ub_black"
                android:textSize="@dimen/text_small_body"
                app:layout_constraintStart_toStartOf="@id/guideline_contact_info"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_home_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="Home Number"
                android:paddingBottom="@dimen/grid_1_half"
                app:layout_constraintStart_toStartOf="@id/guideline_contact_info"
                app:layout_constraintTop_toBottomOf="@+id/tv_home_number"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/md_black_1000"
            app:layout_constraintTop_toBottomOf="@+id/home_contact"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_edit_work_contact_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/edit"
            android:background="?selectableItemBackgroundBorderless"
            android:paddingRight="@dimen/grid_1"
            android:paddingLeft="@dimen/grid_1"
            android:paddingTop="@dimen/grid_1"
            app:layout_constraintTop_toTopOf="@+id/view_line"
            app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/work_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/grid_2"
            app:layout_constraintTop_toBottomOf="@+id/view_line">

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_work_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ub_black"
                android:textSize="@dimen/text_small_body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_work_mobile_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/grid_1_half"
                android:textSize="@dimen/text_small"
                android:text="Work Mobile Number"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_work_mobile_number"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_work_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ub_black"
                android:textSize="@dimen/text_small_body"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_work_number"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_work_email_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="Work Email Address"
                android:paddingBottom="@dimen/grid_1_half"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_work_email_address"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_work_contact_info"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.5"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_work_landline_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/ub_black"
                android:textSize="@dimen/text_small_body"
                app:layout_constraintStart_toStartOf="@id/guideline_work_contact_info"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/lbl_work_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="Work Landline Number"
                android:paddingBottom="@dimen/grid_1_half"
                app:layout_constraintStart_toStartOf="@id/guideline_work_contact_info"
                app:layout_constraintTop_toBottomOf="@+id/tv_work_landline_number"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>