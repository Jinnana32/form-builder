<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grid_2"
        android:background="@color/white_color">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/umid_logo"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/passport_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_license_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/grid_1_half"
            android:textSize="@dimen/text_small"
            android:text="Passport Number"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/umid_logo"
            android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_record_passport_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/text_small_body"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_issued_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:text="Issued Date"
            android:paddingBottom="@dimen/grid_1_half"
            app:layout_constraintTop_toBottomOf="@+id/lbl_license_title"
            app:layout_constraintStart_toEndOf="@+id/umid_logo" android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_issued_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ub_black"
            android:layout_marginTop="@dimen/grid_1_half"
            android:textSize="@dimen/text_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_record_passport_number"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/lbl_cl_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:text="Expiration Date"
            android:paddingBottom="@dimen/grid_1_half"
            app:layout_constraintTop_toBottomOf="@+id/lbl_issued_date"
            app:layout_constraintStart_toEndOf="@+id/umid_logo" android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_expiration_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/ub_black"
            android:layout_marginTop="@dimen/grid_1_half"
            android:textSize="@dimen/text_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_issued_date"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline_license" app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>