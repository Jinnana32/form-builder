<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="150dp">

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_an_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ubp_sample_news"
            android:scaleType="centerCrop"
    />

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_an_title"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_small"
            android:text="Aboitiz Construction partners with MetroPac Movers to build logistics infrastructure in South Luzon"
            android:breakStrategy="simple"
            android:layout_marginTop="@dimen/progress_dimension"
            android:layout_marginLeft="@dimen/text_headline"
            app:layout_constraintTop_toTopOf="@+id/iv_an_image"
            app:layout_constraintLeft_toLeftOf="parent"

    />

    <com.itsgmobility.hrbenefits.ui.UBButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Base.UBButton.Small"
            android:text="Read More"
            android:paddingTop="@dimen/text_small"
            android:paddingBottom="@dimen/text_small"
            android:textColor="@color/white_color"
            android:background="@drawable/btn_bordered"
            android:layout_marginTop="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@+id/tv_an_title"
            app:layout_constraintLeft_toLeftOf="@+id/tv_an_title"
    />

</androidx.constraintlayout.widget.ConstraintLayout>