          android:background="#DCDCDC"
          tools:layout_editor_absoluteY="320dp" app:layout_constraintStart_toStartOf="parent"
          android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:id="@+id/view"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="208dp" android:id="@+id/guideline"/>

    <androidx.constraintlayout.widget.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="303dp" android:id="@+id/guideline2"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_circle_headindg41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/view">

        <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_circle"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xs_padding"
                android:layout_marginBottom="@dimen/s_padding"
                android:text="@string/leave_duration"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_small_body"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_6"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small_body"
            android:id="@+id/tv_leave_duration" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/view" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_6"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small_body"
            android:id="@+id/tv_remaining_leaves"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:layout_marginRight="32dp" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_leave_duration"/>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layout_cirwcle_heading41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="288dp" android:layout_marginRight="288dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/layoust_circle_heading41">

        <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_circle"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xs_padding"
                android:layout_marginBottom="@dimen/s_padding"
                android:text="@string/leave_remarks"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_small_body"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoust_circle_heading41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="288dp" android:layout_marginRight="288dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/layout_circle_headindg41" android:layout_marginTop="-4dp">

        <ImageView
                android:layout_width="15dp"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_circle"
                android:layout_weight="1"
                android:paddingBottom="4dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xs_padding"
                android:layout_marginBottom="@dimen/s_padding"
                android:text="@string/remaining_leaves"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_small_body"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.itsgmobility.hrbenefits.ui.UBEditTextMultiLine
            android:layout_width="367dp"
            android:layout_height="133dp"
            style="@style/UBEditTextMultiLine"
            android:id="@+id/et_reason"
            android:layout_marginEnd="22dp" android:layout_marginRight="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_cirwcle_heading41"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"/>

    <com.itsgmobility.hrbenefits.ui.UBButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            style="@style/Base.UBButton.Primary"
            android:text="@string/approve"
            android:textAllCaps="false"
            android:id="@+id/btn_upload_attachment"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_reason"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="56dp" android:layout_marginStart="56dp"/>

    <com.itsgmobility.hrbenefits.ui.UBButton
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            style="@style/UBButton"
            android:text="@string/decline"
            android:textAllCaps="false"
            android:id="@+id/btn_decline"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/et_reason"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>