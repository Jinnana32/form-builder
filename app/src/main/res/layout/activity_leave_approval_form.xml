<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_to_day_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_15"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/leave_card_sub4"
            tools:layout_editor_absoluteY="249dp" tools:layout_editor_absoluteX="245dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_to_month_year_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_april_2018"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/leave_card_sub2"
            app:layout_constraintStart_toEndOf="@+id/tv_to_day_date"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_to_day_word_date"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_to_day_word_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_monday"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/leave_card_sub2"
            tools:layout_editor_absoluteY="255dp"
            tools:layout_editor_absoluteX="298dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="81dp"
            android:src="@drawable/rex" tools:layout_editor_absoluteY="46dp"
            android:id="@+id/circleImageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="0.498"/>

    <Button
            android:layout_width="35dp"
            android:layout_height="21dp"
            android:background="@drawable/x"
            android:id="@+id/button"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_pending"
            android:background="@drawable/status_lable_pending"
            android:paddingLeft="20dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp"
            android:textColor="@color/white_color"
            android:textSize="@dimen/text_small_body"
            tools:layout_editor_absoluteY="116dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="155dp" android:layout_marginRight="155dp" android:id="@+id/tv_status"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_from_day_number_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_15"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/leave_card_sub4"
            tools:layout_editor_absoluteY="249dp" android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_jamyla_dela_cruz"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/leave_card_sub1"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_status"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_from_month_year_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_april_2018"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/leave_card_sub2"
            app:layout_constraintStart_toEndOf="@+id/tv_from_day_number_date"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_from_month_year_date"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_from_month_year_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_monday"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/leave_card_sub2"
            app:layout_constraintStart_toEndOf="@+id/tv_from_day_number_date"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_leave_form_headed2"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_leave_form_headed2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/from"
            android:textColor="@color/gray1"
            android:textSize="@dimen/leave_card_sub3"
            android:layout_marginStart="44dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="44dp"
            tools:layout_editor_absoluteY="237dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_leave_form_headed"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="@string/to"
            android:textColor="@color/gray1"
            android:textSize="@dimen/leave_card_sub3"
            tools:layout_editor_absoluteY="235dp"
            tools:layout_editor_absoluteX="245dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/leave_approval_vacation_leave"
            android:textColor="@color/ub_black"
            android:textSize="@dimen/leave_card_sub2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="152dp" android:layout_marginRight="152dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="157dp"
            android:layout_marginStart="157dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_name"/>

