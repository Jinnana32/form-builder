<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/grid_2"
        android:background="@color/white_color">

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_record_id_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_keyboard_arrow_down_primary_24dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_record_id_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:text="Select Kind of ID"
            app:layout_constraintTop_toBottomOf="@+id/et_record_id_kind"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_record_passport_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_record_id_kind"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_record_passport_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:text="Passsport Number"
            app:layout_constraintTop_toBottomOf="@+id/et_record_passport_number"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_record_passport_issued"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_date_range_primary_24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_record_passport_number"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline13"
            android:layout_marginEnd="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_record_passport_issued"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_small"
            android:text="Date Issued"
            app:layout_constraintTop_toBottomOf="@+id/et_record_passport_issued"
            app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_record_passport_expiration"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_date_range_primary_24dp"
            app:layout_constraintTop_toBottomOf="@id/tv_record_passport_number"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="@+id/guideline13"
            android:layout_marginStart="8dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_record_passport_expiration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Expiration"
            android:textSize="@dimen/text_small"
            app:layout_constraintTop_toBottomOf="@id/et_record_passport_expiration"
            app:layout_constraintLeft_toLeftOf="@id/et_record_passport_expiration"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline13" app:layout_constraintGuide_percent="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>